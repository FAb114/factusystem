# ===========================================
# FACTUSYSTEM - VARIABLES DE ENTORNO
# ===========================================
# Copiar este archivo a .env y completar con tus valores reales

# ===========================================
# SUPABASE (Base de Datos Principal)
# ===========================================
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_ANON_KEY=tu_anon_key_aqui

# ===========================================
# APLICACIÓN
# ===========================================
VITE_APP_NAME=FactuSystem
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=development

# ===========================================
# SERVIDOR (OPCIONAL - Si no usas Supabase)
# ===========================================
VITE_API_URL=http://localhost:3000
VITE_SOCKET_URL=http://localhost:3000

# ===========================================
# AFIP - FACTURACIÓN ELECTRÓNICA
# ===========================================
VITE_AFIP_CUIT=
VITE_AFIP_CERT_PATH=./certificates/afip-cert.pem
VITE_AFIP_KEY_PATH=./certificates/afip-key.key
VITE_AFIP_PRODUCTION=false
VITE_AFIP_PUNTO_VENTA=1

# ===========================================
# MERCADO PAGO
# ===========================================
VITE_MP_PUBLIC_KEY=
VITE_MP_ACCESS_TOKEN=
VITE_MP_WEBHOOK_SECRET=

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
VITE_WHATSAPP_API_KEY=
VITE_WHATSAPP_PHONE_NUMBER_ID=
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=

# ===========================================
# EMAIL (SMTP)
# ===========================================
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=
VITE_SMTP_PASSWORD=
VITE_SMTP_FROM=

# ===========================================
# BANCOS - INTEGRACIONES
# ===========================================
# Banco Galicia
VITE_GALICIA_API_KEY=
VITE_GALICIA_MERCHANT_ID=

# Getnet
VITE_GETNET_SELLER_ID=
VITE_GETNET_CLIENT_ID=
VITE_GETNET_CLIENT_SECRET=

# BBVA
VITE_BBVA_COMMERCE_ID=
VITE_BBVA_API_KEY=

# Payway (Prisma)
VITE_PAYWAY_SITE_ID=
VITE_PAYWAY_API_KEY=

# ===========================================
# IMPRESORAS
# ===========================================
VITE_DEFAULT_PRINTER_NAME=
VITE_THERMAL_PRINTER_WIDTH=58
VITE_ENABLE_AUTO_PRINT=false

# ===========================================
# CARACTERÍSTICAS
# ===========================================
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_BARCODE_SCANNER=true
VITE_ENABLE_MULTI_BRANCH=true
VITE_ENABLE_GIFTCARDS=true
VITE_ENABLE_LOYALTY_POINTS=true

# ===========================================
# SINCRONIZACIÓN
# ===========================================
VITE_SYNC_INTERVAL=60000
VITE_OFFLINE_QUEUE_MAX_SIZE=1000

# ===========================================
# DESARROLLO
# ===========================================
VITE_DEV_TOOLS=true
VITE_ENABLE_LOGGER=true